<h1><%= t("users.show.title", user_name: @user.name) %></h1>
<% if @user.image? %>
  <%= image_tag @user.image.url %>
<% else %>
  <%= image_tag "/images/default_user_image.jpeg" %>
<% end %>
<table border="1">
  <tr>
    <th><%= User.human_attribute_name(:name) %></th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th><%= User.human_attribute_name(:email) %></th>
    <td><%= @user.email %></td>
  </tr>
</table>
<a><%= link_to t("users.show.edit"), user_edit_path %></a>
<a id="user-delete-button"><%= t("users.show.delete") %></a>

<div id="delete-modal">
  <p><%= simple_format t("users.show.delete_message") %></p>
  <%= button_to t("dictionary.yes"), user_delete_path %>
  <button id="close-delete-modal"><%= t("dictionary.no") %></button>
</div>
