<h1><%= t("users.new.title") %></h1>

<%= render partial: "error_messages" %>

<%= form_with model: @user, url: user_create_path, local: true do |f| %>
  <table border="1">
    <tr>
      <th><%= User.human_attribute_name(:name) %><span><%= t("dictionary.table.required") %></span></th>
      <td><%= f.text_field :name, value: params[:name] %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:email) %><span><%= t("dictionary.table.required") %></span></th>
      <td><%= f.email_field :email, value: params[:email] %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:password) %><span><%= t("dictionary.table.required") %></span></th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:password_confirmation) %><span><%= t("dictionary.table.required") %></span></th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>
  <%= f.submit t("helpers.submit.create") %>
<% end %>c
