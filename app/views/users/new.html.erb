<h1><%= t("users.new.title") %></h1>

<% if @user.errors %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with url: user_create_path, local: true do |f| %>
  <table border="1">
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <td><%= f.text_field :name, value: params[:name] %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <td><%= f.email_field :email, value: params[:email] %></td>
    </tr>
    <tr>
      <th><%= User.human_attribute_name(:password) %></th>
      <td><%= f.password_field :password %></td>
    </tr>
  </table>
  <%= f.submit t("helpers.submit.create") %>
<% end %>
