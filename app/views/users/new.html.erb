<h1><%= t("users.new.title") %></h1>
<%= render partial: "error_messages" %>
<%= form_with model: @user, url: user_create_path, local: true do |f| %>
  <div class="mb-4">
    <div class="py-2">
      <i class="fas fa-signature"></i>&nbsp;<%= User.human_attribute_name(:name) %>
      <span class="required-icon"><%= t("dictionary.table.required") %></span>
    </div>
    <%= f.text_field :name, value: params[:name], class: "input-field" %>
  </div>
  <div class="mb-4">
    <div class="py-2">
      <i class="far fa-envelope"></i>&nbsp;<%= User.human_attribute_name(:email) %>
      <span class="required-icon"><%= t("dictionary.table.required") %></span>
    </div>
    <%= f.email_field :email, value: params[:email], class: "input-field" %>
  </div>
  <div class="mb-4">
    <div class="py-2">
      <i class="password-icon__new fas fa-key"></i>&nbsp;<%= User.human_attribute_name(:password) %>
      <span class="required-icon"><%= t("dictionary.table.required") %></span>
    </div>
    <%= f.password_field :password, class: "input-field" %>
  </div>
  <div class="mb-4">
    <div class="py-2">
      <i class="password-icon__confirmation fas fa-key"></i>&nbsp;<%= User.human_attribute_name(:password_confirmation) %>
      <span class="required-icon"><%= t("dictionary.table.required") %></span>
    </div>
    <%= f.password_field :password_confirmation, class: "input-field" %>
  </div>
  <%= f.submit t("helpers.submit.create"), class: "custom-button" %>
<% end %>
