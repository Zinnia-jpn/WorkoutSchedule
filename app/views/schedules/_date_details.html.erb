<h2><%= text %></h2>
<% if records.present? %>
  <% if records.where(cardio_flag: true).present? %>
    <table>
      <tr>
        <th colspan="5"><%= t("schedules.date_details.cardio") %></th>
      </tr>
      <tr>
        <th><%= t("dictionary.schedule.th.plan_flag") %></th>
        <th><%= Record.human_attribute_name(:workout_id) %></th>
        <th><%= Record.human_attribute_name(:time) %></th>
        <th><%= Record.human_attribute_name(:intensity) %></th>
        <th><%= Record.human_attribute_name(:remark) %></th>
      </tr>
      <% records.each do |record| %>
        <% if record.cardio_flag == true %>
          <tr>
            <td><%= record.plan_flag ? "" : "OK" %></td>
            <td><%= @workouts.find_by(id: record.workout_id).name %></td>
            <td><%= record.time.present? ? t("dictionary.record.value.time", time: record.time) : "- -" %></td>
            <td><%= record.intensity_id.present? ? @intensities.find_by(id: record.intensity_id).name : "- -" %></td>
            <td><%= record.remark.present? ? record.remark : "- - " %></td>
            <td class="border_none"><%= link_to "編集", controller: "records", action: "edit", id: record.id %></td>
          </tr>
        <% end %>

      <% end %>
    </table>
  <% end %>

  <% if records.where(cardio_flag: false).present? %>
    <table>
      <tr>
        <th colspan="7"><%= t("schedules.date_details.weight") %></th>
      </tr>
      <tr>
        <th>済</th>
        <th><%= Record.human_attribute_name(:workout_id) %></th>
        <th><%= Record.human_attribute_name(:weight) %></th>
        <th><%= Record.human_attribute_name(:rep) %></th>
        <th><%= Record.human_attribute_name(:set) %></th>
        <th><%= Record.human_attribute_name(:interval) %></th>
        <th><%= Record.human_attribute_name(:remark) %></th>
      </tr>
      <% records.each do |record| %>
        <% if record.cardio_flag == false %>
          <tr>
            <td><%= record.plan_flag ? "" : "OK" %></td>
            <td><%= @workouts.find_by(id: record.workout_id).name %></td>
            <td><%= record.weight.present? ? t("dictionary.record.value.weight", weight: record.weight) : "- -" %></td>
            <td><%= record.rep.present? ? t("dictionary.record.value.rep", rep: record.rep) : "- -" %></td>
            <td><%= record.set.present? ? t("dictionary.record.value.set", set: record.set) : "- -" %></td>
            <td><%= record.interval.present? ? t("dictionary.record.value.interval", interval: record.interval) : "- -" %></td>
            <td><%= record.remark.present? ? record.remark : "- -" %></td>
            <td class="border_none"><%= link_to "編集", controller: "records", action: "edit", id: record.id %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  <% end %>

<% else %>
  <h3><%= t("dictionary.schedule.none") %></h3>
<% end %>
