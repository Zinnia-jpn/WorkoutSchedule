<h1><%= @user.name %>さんのスケジュール</h1>

<h2>今日のトレーニングメニュー</h2>
<% if @today_records.present? %>
  <h3>有酸素運動</h3>
  <% if @today_records.where(cardio_flag: true).present? %>
    <table border="1">
      <tr>
        <th>種目名</th>
        <th>運動時間（分）</th>
        <th>運動強度</th>
        <th>備考</th>
      </tr>
      <% @today_records.each do |record| %>
        <% if record.cardio_flag == true %>
          <tr>
            <td><%= @workouts.find_by(id: record.workout_id).name %></td>
            <td><%= record.time.present? ? record.time : "- -" %></td>
            <td><%= record.intensity.present? ? record.intensity : "- -" %></td>
            <td><%= record.remark.present? ? record.remark : "- - " %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  <% else %>
    <p>なし</p>
  <% end %>

  <h3>無酸素運動</h3>
  <% if @today_records.where(cardio_flag: false).present? %>
    <table border="1">
      <tr>
        <th>種目名</th>
        <th>重量</th>
        <th>レップ数</th>
        <th>セット数</th>
        <th>インターバル</th>
        <th>備考</th>
      </tr>
      <% @today_records.each do |record| %>
        <% if record.cardio_flag == false %>
          <tr>
            <td><%= @workouts.find_by(id: record.workout_id).name %></td>
            <td><%= record.weight.present? ? record.weight : "- -" %></td>
            <td><%= record.rep.present? ? record.rep : "- -" %></td>
            <td><%= record.set.present? ? record.set : "- -" %></td>
            <td><%= record.interval.present? ? record.interval : "- -" %></td>
            <td><%= record.remark.present? ? record.remark : "- -" %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
    <% else %>
      <p>なし</p>
    <% end %>

<% else %>
  <h3>なし</h3>
<% end %>