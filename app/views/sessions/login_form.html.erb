<h1>ログイン</h1>

<% if @error.present? %>
  <%= @error %>
<% end %>

<%= form_with url: login_path, local: true do |f| %>
  <table border="1">
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, value: params[:email] %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td><%= f.password_field :password %></td>
    </tr>
  </table>
  <%= f.submit "ログイン" %>
<% end %>