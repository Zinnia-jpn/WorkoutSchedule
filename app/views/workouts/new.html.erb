<h1>ワークアウト入力フォーム</h1>

<% if @workout.errors %>
  <ul>
    <% @workout.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<div class="form">
  <table border="1">
    <tr>
      <th>カテゴリ</th>
      <td>
        <%= collection_select(:muscle_part, :id, MusclePart.all, :id, :name,
                              {:prompt => "選択してください"}, {id: "normal-muscle-part-select"}) %>
        <%= hidden_field_tag "plan[flag]", @plan_flag # jQueryに値を渡す用
        %>
      </td>
    </tr>
  </table>
  <div id="workout-details"></div>
</div>